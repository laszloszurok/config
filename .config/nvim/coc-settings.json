{
    "html.autoClosingTags": true,
    "diagnostic-languageserver.filetypes": {
        // lint `sh` (includes `bash`) files
        "sh": "shellcheck"
    },
    "pairs.enableCharacters": [
        "(",
        "[",
        "{",
        "'",
        "\"",
        "`"
    ],
    "coc.preferences.formatOnSaveFiletypes": [
        "java",
        "javascript",
        "typescript",
        "typescriptreact",
        "json",
        "javascriptreact",
        "typescript.tsx",
        "graphql"
    ],
    "codeLens.enable": true,
    "java.referencesCodeLens.enabled": true,
    "java.jdt.ls.vmargs": "-javaagent:/usr/local/share/lombok.jar",
    "explorer.position": "left",
    "explorer.file.column.clip.copy": "",
    "explorer.file.column.clip.cut": "",
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings.global": {
        "gk": "expandablePrev",
        "gj": "expandableNext",
        "<space>": "toggleSelection",
        "<tab>": "actionMenu",
        "h": "collapse",
        "l": [
            "expandable?",
            "expand",
            "open"
        ],
        "J": [
            "toggleSelection",
            "nodeNext"
        ],
        "K": [
            "toggleSelection",
            "nodePrev"
        ],
        "<2-LeftMouse>": [
            "expandable?",
            [
                "expanded?",
                "collapse",
                "expand"
            ],
            "open"
        ],
        "o": [
            "expanded?",
            "collapse",
            "expand"
        ],
        "<cr>": [
            "expandable?",
            "cd",
            "open"
        ],
        "H": "open:split",
        "S": "open:split:plain",
        "V": "open:vsplit",
        "t": "open:tab",
        "<bs>": "gotoParent",
        "gp": "preview:labeling",
        "Y": "copyFile",
        "X": "cutFile",
        "P": "pasteFile",
        "dd": "delete",
        "T": "addFile",
        "D": "addDirectory",
        "r": "rename",
        ".": "toggleHidden",
        "R": "refresh",
        "?": "help",
        "q": "quit",
        "<esc>": "esc",
        "!": "systemExecute",
        "gd": "listDrive",
        "f": "search",
        "F": "searchRecursive",
        "gf": "gotoSource:file",
        "gb": "gotoSource:buffer",
        "[[": "sourcePrev",
        "]]": "sourceNext",
        "[d": "diagnosticPrev",
        "]d": "diagnosticNext",
        "[c": "gitPrev",
        "]c": "gitNext",
        "<<": "gitStage",
        ">>": "gitUnstage"
    }
}
